int cerca_dicotomica_tecnic(avio a[N],int dim,string x,string y){
    int inici=0,final=dim-1;
    while(inici<=final){
         int mitja=(inici+final)/2;
         if(y>a[mitja].tecnic.cognom && x>a[mitja].tecnic.nom){
           inici=mitja+1;  //Busquem a la segon meitat de la taula
         }else if(y<a[mitja].tecnic.cognom && x<a[mitja].tecnic.nom){
           final=mitja-1;  //Busquem a la primera meitat de la taula
         }else{
           return mitja;  //Retorna la posiciÃ³
         }
    }return -1;  //No s'ha trobat l'element
}
