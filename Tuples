struct avio{
    string codi;
    string model;
    int hores_vol;
    string estat;
    tm data_entrada;   //Data automàtica d'entrada de la informació en el sistema
    temps data_sortida;  //Data de sortida prevista
    double preu;
    identificacio tecnic;
};
struct temps{
    int dia;
    int mes;
    int any;
};
struct tm{
    int tm_sec;  //0-59
    int tm_min;  //0-59
    int tm_hour;  //0-23
    int tm_mday;  //1-31
    int tm_mon;  //0-11
    int tm_year;  //desde 1900
};
struct identificacio{
    string nom;
    string cognom;
    int DNI;
};
