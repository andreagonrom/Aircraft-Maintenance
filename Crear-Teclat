void crear_per_teclat(avio tAvions[N],int& dim){
   if(dim==24){
      cout<<"Angar ple."<<endl;
   }else{
      cout<<"Dades de l'avio."<<endl;
      cout<<"Codi de l'avio: ";
      cin>>tAvions[dim].codi;
      cout<<"Model de l'avio: ";
      cin>>tAvions[dim].model;
      cout<<"Hores de vol de l'avio: ";
      cin>>tAvions[dim].hores_vol;
      cout<<"Estat del manteniment de l'avio: ";
      cin>>tAvions[dim].estat;
      cout<<"Data d'entrada de l'avio: ";
      cin>>tAvions[dim].data_entrada.dia;
      cin>>tAvions[dim].data_entrada.mes;
      cin>>tAvions[dim].data_entrada.any;
      cin>>tAvions[dim].data_entrada.hores;
      cin>>tAvions[dim].data_entrada.min;
      cin>>tAvions[dim].data_entrada.segons;
      cout<<"Data de sortida de l'avio: ";
      cin>>tAvions[dim].data_sortida.dia;
      cin>>tAvions[dim].data_sortida.mes;
      cin>>tAvions[dim].data_sortida.any;
      cin>>tAvions[dim].data_sortida.hores;
      cin>>tAvions[dim].data_sortida.min;
      cin>>tAvions[dim].data_sortida.segons;
      cout<<"Preu del manteniment de l'avio: ";
      cin>>tAvions[dim].preu;
      cout<<"Tecnic responsable de l'avio: ";
      cin>>tAvions[dim].tecnic.nom;
      cin>>tAvions[dim].tecnic.cognom;
      cin>>tAvions[dim].tecnic.DNI;
      cout<<endl;
      dim++;
   }
}
